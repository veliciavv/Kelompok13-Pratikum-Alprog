float validasi(){
    char ch;
    char * data;
    int vlds = 0;
    data = (char *) malloc(sizeof(char));

    while ((ch = getch()) != 13){
        if ((ch >= '0' && ch <= '9')|| (ch == '.')){
            printf("%c", ch);
            data[vlds] = ch;
            vlds++;
        }
    }
    data[vlds] = '\0';
    return atof(data);
}

void hitung_bindes(long long bil){
 int hasil = 0, i = 0, perdigit;
    while (bil!=0){
        perdigit = bil%10;
        bil /= 10;
        hasil += perdigit*pow(2,i);
        ++i;
    }
    printf(" adalah : %d", hasil);
	printf("\n\t -------------------------------------------------\n");
}

char* concat(const char *s1, const char *s2);

void hitung_desbin(int bil){
    char temp[1];
    char *hasil = "";
    int i;
    while(bil > 0){
        i = bil%2;
        if(i == 1){
            sprintf(temp,"%d",i);
            bil -= 1;
        }
        else if(i == 0){
            sprintf(temp,"%d",i);
        }
        hasil = concat(temp,hasil);
        bil /= 2;
    }
    printf(" adalah : %s", hasil);
	printf("\n\t -------------------------------------------------\n");
}

int clean(){
	while(getchar() != '\n');
	return 1;
}

int binInput(){
//	input2:
	long long inputbin;
	int len;
	int i = 0;
	char cekbin[256];
	int enterCheck;
    fflush(stdin);
    system("cls");
	system("COLOR 0E");
	judul();
		
	printf("\n\t Bilangan biner yang ingin di konversi: ");
    while(((scanf(" %lld%c", &inputbin, &enterCheck)) != 2 || enterCheck != '\n')&& clean() ){
	        printf("\n\t -- Maaf pilihan yang anda masukkan tidak valid --\n");
	        while(getchar() != '\n');
	        printf("Masukkan bilangan biner anda : ");
	}

    //cek binary
    sprintf(cekbin, "%lld", inputbin);
    len = strlen(cekbin);
    while( i < len){
        if(cekbin[i] > '1' || cekbin[i] < '0'){
            printf("\n\t -- Maaf pilihan yang anda masukkan tidak valid --\n");
            getch();
            inputbin = 0;
//            goto input2;
			binInput();
        }
        i++;
    }
    printf("\n\n\t -------------------------------------------------");
	printf("\n\t Hasil konversi biner %lld", inputbin);
    hitung_bindes(inputbin);
    
    akhir();
}

int desInput(){
	int input;
	int enterCheck;
    fflush(stdin);
    system("cls");
	system("COLOR 0E");
	judul();
		
	printf("\n\t Bilangan desimal yang ingin di konversi: ");
    if(((scanf(" %d%c", &input, &enterCheck)) != 2 || enterCheck != '\n')&& clean() || input < 0){
		        printf("Masukkan Bilangan yang Valid");
		        while(getchar() != '\n');
		        desInput();
	}else{
	printf("\n\n\t -------------------------------------------------");
	printf("\n\t Hasil konversi desimal %d", input);
    hitung_desbin(input);
	
	akhir();
    }	
}

int main(){
    int input, option, i=0, len;
